<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#C0C0C0">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Post Your Property"
        android:textColor="#044E47"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="35sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Type"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

      <!--  <EditText
            android:id="@+id/pp_prop_type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"
            android:background="@drawable/corner1"
            android:hint="  Select" />-->
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColorHint="#044E47"
            android:textSize="20sp"
            android:background="@drawable/corner1"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expected Price"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pp_price"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"

            android:background="@drawable/corner1"

            android:hint="  Add Price" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pp_location"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"

            android:background="@drawable/corner1"
            android:hint="  Enter Location"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Property Description"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pp_description"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"
            android:background="@drawable/corner1"

            android:hint="  Add Description" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <!-- <TextView
                android:id="@+id/Mmving_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Property Photo"
                android:padding="10dp"
                android:textColor="#044E47"
                android:textSize="20sp" />-->
            <ImageView
                android:id="@+id/pp_preview"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />


            <Button
                android:id="@+id/pp_browse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/corner1"
                android:textAllCaps="false"
                android:text="Browse" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_weight="2"
    android:gravity="center"
    >


    <Button
        android:id="@+id/pp_submit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/corner1"
        android:text="Submit" />
</LinearLayout>




</LinearLayout>