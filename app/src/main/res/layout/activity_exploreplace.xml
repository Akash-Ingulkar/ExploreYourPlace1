<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#016259"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_roman"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        android:text="Explore Your Place"
        android:textColor="#fff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_roman"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Feel like own"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ep_button1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_roman"
        android:layout_marginTop="100dp"
        android:padding="15dp"
        android:background="@drawable/corner1"
        android:text="Find me a home" />

    <Button
        android:id="@+id/ep_button2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times_roman"
        android:layout_marginTop="20dp"
       android:padding="15dp"
        android:background="@drawable/corner1"
        android:text="Manage my house" />


</LinearLayout>